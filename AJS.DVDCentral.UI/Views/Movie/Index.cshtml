@model IEnumerable<AJS.DVDCentral.BL.Models.Movie>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="card mb-2">
                <img src="~/images/@item.ImagePath" class="card-img-top" alt="@item.Title">
                <div class="card-header">
                    <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                </div>
                <div class="card-body">
                    <h5>@Html.DisplayFor(modelItem => item.Description)</h5>
                    <h5>@Html.DisplayFor(modelItem => item.DirectorFullName)</h5>
                    <h5>@Html.DisplayFor(modelItem => item.Quantity)</h5>
                    <h5>@Html.DisplayFor(modelItem => item.Cost)</h5>
                </div>
                <div class="card-footer">
                    <a class="btn btn-sm btn-primary" asp-route-id="@item.Id" asp-action="Edit">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-route-id="@item.Id" asp-action="Details">Details</a>
                    <a class="btn btn-sm btn-primary" asp-route-id="@item.Id" asp-action="Delete">Delete</a>

                    <input class="btn btn-sm btn-primary" type="button" onclick="AddToCart(@item.Id)" value="+">
                </div>
            </div>

        </div>
    }

</div>